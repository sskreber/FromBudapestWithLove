<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.frombudapestwithlove">

    <!--Application launch icon source: "budapest_filled" at https://icons8.com/icon/60355/budapest -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_budapest_filled"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_budapest_filled_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LocationDetailsActivity"
            android:label="@string/activity_individual_location_details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>